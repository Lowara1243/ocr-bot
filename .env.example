# Telegram Bot Token
BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"

# Telegram Admin ID
ADMIN_ID="YOUR_ADMIN_ID"

# OCR Settings
DEFAULT_OCR_ENGINE="tesseract" # tesseract, yandex
ENABLED_OCR_ENGINES="tesseract,yandex" # Indicate the included engines here, separated by commas

# Dummy API Keys (replace with real ones if you implement them)
YANDEX_CLOUD_API_KEY="YOUR_YANDEX_CLOUD_API_KEY" # For Yandex Vision API
YANDEX_CLOUD_FOLDER_ID="YOUR_YANDEX_CLOUD_FOLDER_ID"

# Rate Limits (requests per period)
RATE_LIMIT_DAILY=100
RATE_LIMIT_WEEKLY=500
RATE_LIMIT_MONTHLY=1500

# Logging
LOG_LEVEL="INFO" # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="bot.log" # Set to empty or remove to log only to console

# Database
DATABASE_PATH="ocr_bot.db" # Filename for your database

# Tesseract path (if not in system PATH)
# TESSERACT_CMD_PATH="/usr/local/bin/tesseract" # Example for macOS if installed via brew
# TESSERACT_CMD_PATH="C:\\Program Files\\Tesseract-OCR\\tesseract.exe" # Example for Windows

# OCR Language Settings
DEFAULT_OCR_LANGUAGE="eng" # Default language for OCR (e.g., eng, rus, eng+rus for Tesseract)
# List of supported languages for user selection (comma-separated, primarily for Tesseract)
# Ensure these language packs are installed for Tesseract on your system!
SUPPORTED_OCR_LANGUAGES="eng,rus,deu,fra,spa"

# Logging Preview
OCR_LOG_PREVIEW_LENGTH=100 # Number of characters for OCR text preview in logs
